<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Title">
        <item name="android:textSize">@dimen/standard_title_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.Body">
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="AppTheme.TextCollapsingAppBar">
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.TextCollapsingAppBar.Title">
        <item name="android:textSize">@dimen/standard_title_text_size</item>
        <item name="android:textStyle">bold</item>

    </style>

</resources>
